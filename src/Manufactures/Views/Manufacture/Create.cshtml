@model Manufactures.ViewModels.Manufacture.CreateViewModel
<h1 class="master-detail-view__title">
  Create Order
</h1>
<form class="master-detail-view__form form" id="form" method="post">
  <div class="form__field field">
    <label asp-for="OrderDate" class="field__label label"></label>
    <input asp-for="OrderDate" class="field__input input" type="text" />
  </div>
  <div class="form__field field">
    <label asp-for="UnitDepartmentId" class="field__label label"></label>
    <input asp-for="UnitDepartmentId" class="field__input input" type="text" />
  </div>
  <div class="form__buttons buttons">
    <button class="buttons__button button" type="submit">Create income</button>
    <a class="buttons__button button" href="/manufacture">Cancel</a>
  </div>
</form>